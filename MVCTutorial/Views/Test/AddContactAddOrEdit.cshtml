@{
    ViewBag.Title = "AddContact";
}

<div style="min-height:256px">

    <div class="col-md-3">

        @{ Html.RenderAction("SideMenu1", "Test");}

    </div>

    <div class="col-md-9">
        <h3>@ViewBag.Message</h3>

        <div class="well">
            <a href="#" class="btn btn-primary" onclick="AddEditContact(0)">Add New Contact </a>

        </div>

    </div>

    <div class="panel panel-body" style="min-height:256px">

        
        </div>

    </div>

<div class="modal fade" id="employeeModel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <a href="#" class="close" data-dismiss="modal">&times;</a>
                <h3 class="modal-title">AddEdit Employee</h3>
            </div>
            <div class="modal-body" id="employeeModalBody">


            </div>


        </div>

    </div>

</div>

<script>

    var AddEditContact = function (employeeId) {

        var url = "/Test/AddEditContact?EmployeeId=" + employeeId;

        $("#employeeModalBody").load(url, function () {
            $("#employeeModel").modal("show");

        })

    }
</script>
